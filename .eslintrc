// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false,
      "impliedStrict": false
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "strict": ["error", "global"],
    "no-underscore-dangle": "off",
    "prefer-template": "off",
    "no-param-reassign": "off",
    "max-len": "off",
    "comma-dangle": "off",
    "consistent-return": "off",
    "prefer-rest-params": "off",
    "no-plusplus": "off"
  }
}
